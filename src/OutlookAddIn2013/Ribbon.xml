<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab id="TabUniversalSync" label="JIRA">
        <group id="group_SyncControl" label="Controls">
          <button id="button_SyncNow" onAction="Button_SyncNow_Click" label="Download" size="large" getEnabled="Button_SyncNow_GetEnabled" getImage="GetSyncNowButtonImage" />
          <button id="button_StopSync" onAction="Button_StopSync_Click" label="Stop" size="large" getEnabled="Button_StopSync_GetEnabled" getImage="GetStopSyncButtonImage"/>
          <button id="button_Settings" onAction="Button_Settings_Click" label="Settings..." size="large"  getImage="GetSettingsButtonImage"/>
          <button id="button_Log" onAction="Button_Log_Click" label="Open Log..." size="large" getImage="GetLogButtonImage"/>
        </group>
        <group id="group_SyncInfo" label="Info">
          <labelControl id="label_TasksState" getLabel="GetLabel_label_TasksState"/>

          <separator id="separator1" />

          <labelControl id="label_State" getLabel="GetLabel_label_State" />
          <labelControl id="label_Version" getLabel="GetLabel_label_Version" />
          <labelControl id="label_Warning" getLabel="GetLabel_label_Warning" />
        </group>
      </tab>

    </tabs>
  </ribbon>
</customUI>

